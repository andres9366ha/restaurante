extends ../layout

block content

  h1 Registrar Usuario
  form(action='/usuarios' method='POST')
    label Nombre
    br
    input(name="name" type="text" required="true" placeholder="Nombre del usuario")
    br
    br
    label Username
    br
    input(name="username" type="text" required="true" placeholder="Username del usuario")
    br
    br
    label Contraseña
    br
    input(name="password" type="password" required="true" placeholder="Introdusca la contraseña")
    br
    br
    input(type="submit")
