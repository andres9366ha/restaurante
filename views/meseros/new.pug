html
  head
    title=Login
    link(
      href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css',
      rel='stylesheet'
    )
  body
    div.container

      div.page-header
        h1 Registar Mesero

        if message
                div.alert.alert-success #{message}
      form.form-horizontal(action='/meseros', method='post', role='form')

        div.form-group
          label.col-sm-4 Nombre
          div.col-sm-8
            input.form-control(
              placeholder='Ingrese el nombre del mesero',
              required=true,
              name='name',
              type='text')
        div.form-group
          label.col-sm-4 Username
          div.col-sm-8
            input.form-control(placeholder='Ingrese el username para el mesero',
              required=true,
              name='username',
              type='text')
        div.form-group
          div.col-sm-offset-4.col-sm-8
            button.btn.btn-primary(type='submit') Registrar
        div.pull-right
          a(href='/usuarios/index') Volver
